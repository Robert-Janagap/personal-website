extends ../lib/docwrapper

append title-page
    title Contact me
append head-link
    link(rel ='stylesheet' href='../assets/css/lib/normalize.css')
    link(rel ='stylesheet' href='../assets/css/lib/boilerplate-style.css')
    link(rel ='stylesheet' href='../assets/css/lib/font-awesome.css')
    link(rel ='stylesheet' href='../assets/css/main.css')
append scripts
    script window.jQuery || document.write('<script src="../assets/js/lib/jquery-1.11.1.min.js"><\/script>')
    script(src="../assets/js/main.js")
append logo
    a(href="../")
        img(src="../assets/img/logo-2.png" alt="My Logo" style="width: 200px; height: 48px;")
    a(href="../").header--fixed
        img(src="../assets/img/rr_logo.png" alt="My Logo" style="height: 60px;")
append mainNav-links
    nav.header_nav
        ul.header_list
            li.header_items
                a(href="../about/").header_items--link About
            li.header_items
                a(href="../blog/").header_items--link Blog
            li.header_items
                a(href="").header_items--link Contact
append responsive-links
    nav.header_responsive
        ul.header_responsive--nav
            li.header_responsive--items
                a(href="../about/").header_responsive--link About
            li.header_responsive--items
                a(href="../blog/").header_responsive--link Blog
            li.header_responsive--items
                a(href="").header_responsive--link Contact
append mainFooter
    ul
        li.footer_nav--items
            a(href="../").footer_nav--link Home
        li.footer_nav--items
            a(href="../about/").footer_nav--link About
        li.footer_nav--items
            a(href="../blog/").footer_nav--link Blog
        li.footer_nav--items
            a(href="").footer_nav--link Contact
        li.footer_nav--items
            a(href="").footer_nav--link Facebook
        li.footer_nav--items
            a(href="").footer_nav--link Github
        li.footer_nav--items
            a(href="").footer_nav--link Twitter
block mainContent
    main.col-9
        article.contact
            h1 Contact me
            p  Lorem ipsum dolor sit amet, consectetur adipisicing elit. Impedit molestias, maiores culpa, error itaque omnis eius. Sed dolor, facilis! Corporis.
            form.contact-form
                table
                    tr
                        td
                            label(for="full_name") Name:
                        td
                            input(type="text" name ="full_name" maxlength="30" placeholder="Enter your full name" required)
                    tr
                        td
                            label(for="email") Email:
                        td
                            input(type="email" name="email_address" maxlength="80" placeholder="Example@gmail.com" required)
                    tr
                        td
                            label(for="Website") Website:
                        td
                            input(type="url" name="home_page" placeholder="http://example.com")
                    tr
                        td
                            label(for="message") Message:
                    tr
                        td(colspan="2")
                            textarea(name="message" maxlength="1000" cols="50" rows="6" placeholder="message here...")
                    tr
                        td
                            input(type="submit" value="submit")
        .small-space
